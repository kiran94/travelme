@model IList<com.kiransprojects.travelme.Framework.Entities.Trip>
@{
    ViewBag.Title = "Trips";
}

@Html.Partial("Navigation")

<div class="row" id="banner">
    <div class="col-xs-12">
        <h1>@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-xs-push-12 col-sm-6">
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.DisplayFor(model => model[0].TripName)
            <hr />
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-xs-pull-12 col-sm-6">
        @Html.BeginForm("Add", "Trip", FormMethod.Post, null)
        {
            
        }
    </div>
</div>