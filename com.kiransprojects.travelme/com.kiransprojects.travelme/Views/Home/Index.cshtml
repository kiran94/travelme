@model com.kiransprojects.travelme.Models.UserViewModel
@{
    ViewBag.Title = "travel me";
}

<div id="head">
    <div class="row">
        <div class="col-xs-12">
            <div id="">
                <h2 id="title" data-anijs="if: mouseover, do: tada animated">@ViewBag.Title</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("LoginRedirect", "Account", FormMethod.Post, null))
            {
                @*if (Model.Feedback != null)
                {
                    <div class="@(Model.Feedback.isError? "error": "standard")" >@Model.Feedback.Message</div>
                }*@


                @Html.ValidationSummary();
                @Html.TextBoxFor(o => o.User.Email, new { @class = "form-control credential-enter", @placeholder = "Email" })
                @Html.PasswordFor(o => o.User.UserPassword, new { @class = "form-control credential-enter", @placeholder = "Password" })

                <input type="submit" name="Login" value="Log In" class="button" />
                <input type="submit" name="Register" value="Register" class="button" />
            }
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <ul id="sellingpoints">
                <li class="selling_point_node"><i data-anijs="if: mouseover, do: pulse animated" class="fa fa-plane fa-3x"></i></li>
                <li class="selling_point_node">Track your jouney as often as you like</li>

                <li class="selling_point_node2"><i data-anijs="if: mouseover, do: pulse animated" class="fa fa-map fa-3x"></i></li>
                <li class="selling_point_node2">Map your adventures using location data</li>

                <li class="selling_point_node3"><i data-anijs="if: mouseover, do: pulse animated" class="fa fa-share-square-o fa-3x"></i></li>
                <li class="selling_point_node3">Share you journey with your friends</li>
            </ul>
        </div>
    </div>
</div> 