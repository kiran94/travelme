@model com.kiransprojects.travelme.Framework.Entities.UserEntity
@{
    ViewBag.Title = "Home";
    ViewBag.Name = Model.FirstName;
}

@Html.Partial("Navigation")


<div class="row" id="banner">
    <h1>@ViewBag.Title</h1>
</div>


<div class="row">
    <div class="col-xs-12 col-sm-9">
        <div class="panels">
            <h3>Trips</h3>
            @if (Model.Trips != null && Model.Trips.Count > 0)
            {
                for (int i = 0; i < Model.Trips.Count; i++)
                {
                    <p>@Model.Trips[i].TripName</p>
                }
            }
            else
            {
                <h4>No Trips!</h4>
            }


            <button class="button">@Html.ActionLink("Add", "Index", "Trip")</button>

        </div>
    </div>

    <div class="col-xs-12 col-sm-3">
        <div class="panels" id="panel-location">
            <h3>Locations</h3>
        </div>
    </div>
</div>